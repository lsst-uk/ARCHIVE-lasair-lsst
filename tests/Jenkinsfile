pipeline {
  agent { docker { image 'python:3.8' } }
  stages {
    stage('build') {
      steps {
        dir('tests') {
          sh 'pwd'
          sh 'pip install -r ../sherlock_wrapper/requirements.txt'
        }
      }
    }
    stage('test') {
      steps {
        dir('tests') {
          sh 'python3 test_sherlock_wrapper.py'
        }
      }
    }
  }
}
